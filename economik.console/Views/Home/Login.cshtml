@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Message</title>
    @Styles.Render("~/Content/css/login")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="~/Content/Images/avatar.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin" action="@Url.Action("Login","Home")" method="post">
                <span id="reauth-email" class="reauth-email"></span>
                <input type="email" id="inputEmail" class="form-control" placeholder="Usuario" required autofocus name="model.Correo">
                <input type="password" id="inputPassword" class="form-control" placeholder="Contraseña" required name="model.Contrasena">
                <a class="btn btn-lg btn-primary btn-block btn-signin" href="~/home/register" style="line-height: 2.333;">Registrarse</a>
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Ingresar</button>
            </form><!-- /form -->
            <a href="#" class="forgot-password">
                Olvido su contraseña
            </a>
        </div><!-- /card-container -->

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }

        @if (ViewBag.msg != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.msg
            </div>
        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>